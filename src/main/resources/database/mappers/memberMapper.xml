<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.iu.s3.member.MemberDAO"><!-- 마지막을 클래스 이름인 걸 기억하기!! -->
    <!-- 쿼리문 쓸 곳 -->
    <insert id="memberJoin" parameterType="com.iu.s3.member.MemberDTO">
    	insert into member(id, pw, name, phone, email) values (#{id}, #{pw}, #{name}, #{phone}, #{email})
    </insert>
    
    <select id="memberLogin" parameterType="com.iu.s3.member.MemberDTO" resultType="com.iu.s3.member.MemberDTO">
    	SELECT * FROM member WHERE id=#{id} and pw=#{pw} 
    </select>
    
    <delete id="memberDelete" parameterType="com.iu.s3.member.MemberDTO">
    	delete member WHERE id=#{id}
    	<!-- 여기에 ;찍으니까 00911 떳음  -->
    </delete>
    
    <update id="memberUpdate" parameterType="com.iu.s3.member.MemberDTO">
    	update member set id=#{id}, pw=#{pw}, name=#{name}, phone=#{phone}, email=#{email} where id=#{id}
    </update>
    
   
    
    </mapper>